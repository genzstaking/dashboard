	"jest": {
		"verbose": false,
		"testRegex": "(/src/.*(test|spec))\\.ts?$",
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.[t|j]sx?$": "babel-jest"
		}
